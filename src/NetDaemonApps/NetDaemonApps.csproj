<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <LangVersion>10.0</LangVersion>
        <Nullable>enable</Nullable>
        <RootNamespace>daemonapp</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <None Update="appsettings.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </None>
        <None Update="appsettings.Development.json">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
          <CopyToPublishDirectory>Never</CopyToPublishDirectory>
        </None>
    </ItemGroup>
    <ItemGroup>
        <None Include="apps\**\*.yaml">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
        <Compile Remove="tests\**" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="JoySoftware.NetDaemon.AppModel" Version="23.44.0" />
        <PackageReference Include="JoySoftware.NetDaemon.Extensions.Mqtt" Version="23.44.0" />
        <PackageReference Include="JoySoftware.NetDaemon.Extensions.Tts" Version="23.44.0" />
        <PackageReference Include="JoySoftware.NetDaemon.Runtime" Version="23.44.0" />
        <PackageReference Include="JoySoftware.NetDaemon.HassModel" Version="23.44.0" />
        <PackageReference Include="JoySoftware.NetDaemon.Client" Version="23.44.0" />
        <PackageReference Include="JoySoftware.NetDaemon.Extensions.Scheduling" Version="23.44.0" />
        <PackageReference Include="JoySoftware.NetDaemon.Extensions.Logging" Version="23.44.0" />
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.1" />
        <PackageReference Include="Serilog.AspNetCore" Version="7.0.0" />
        <PackageReference Include="System.Reactive" Version="6.0.0" />
    </ItemGroup>


</Project>
